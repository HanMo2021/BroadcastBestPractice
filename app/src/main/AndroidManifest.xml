<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.broadcastbestpractice">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.AppCompat">
        <!-- 所有Activity应用的主题 -->


        <activity
            android:name=".Shanping"
            android:theme="@style/Theme.Splash">

            <!--
            ndroid:theme="@style/Theme.Splash"调用的"@style/Theme.Splash"
            将全局定义的调用主题覆盖了
            -->
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
            <!-- 设置主Activity -->
        </activity>
        <activity android:name=".LoginActivity" />
        <activity android:name=".MainActivity" />
        <activity android:name=".HuoxingActivity" />
        <activity android:name=".ShipingActivity" />
        <activity android:name=".YinyueActivity" />
        <activity android:name=".ZhujiemianActivity" />
    </application>

</manifest>